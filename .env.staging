# Environment Configuration - STAGING
# Sistema de Ventas
# Copy this file to /var/www/sistema-ventas-staging/shared/.env

APP_NAME="Sistema Ventas - Staging"
APP_ENV=staging
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Caracas
APP_URL=https://staging.tu-dominio.com
APP_VERSION=1.0.0

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Database - PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=sistema_ventas_staging
DB_USERNAME=postgres
DB_PASSWORD=your_staging_password

# Cache
CACHE_STORE=file
CACHE_PREFIX=sistema_ventas_staging_

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue
QUEUE_CONNECTION=sync

# Mail (optional)
MAIL_MAILER=log

# Sanctum
SANCTUM_STATEFUL_DOMAINS=staging.tu-dominio.com

# CORS
CORS_ALLOWED_ORIGINS=https://staging.tu-dominio.com
